{
  "name": "unstyled-design-monorepo",
  "version": "0.0.2",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "author": "Hongbusi",
  "license": "MIT",
  "scripts": {
    "test": "vitest",
    "play": "pnpm -C playground run dev",
    "build": "pnpm -r --parallel -F \"./packages/{preset-uno,unstyled-design}\" run build",
    "stub": "pnpm -r --parallel -F \"./packages/{preset-uno,unstyled-design}\" run stub",
    "docs:dev": "nr update && vitepress dev packages",
    "docs:build": "nr update && vitepress build packages",
    "docs:serve": "vitepress serve packages",
    "copy": "tsx ./scripts/copy-files.ts",
    "update": "tsx ./scripts/update.ts",
    "release": "bumpp package.json packages/**/package.json",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.36.0",
    "@antfu/ni": "^0.20.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@hongbusi/utils": "^0.0.2",
    "@iconify/json": "^2.2.34",
    "@types/fs-extra": "^11.0.1",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.14.6",
    "@unocss/core": "^0.50.4",
    "@unocss/preset-mini": "^0.50.4",
    "@unocss/preset-uno": "^0.50.4",
    "@unocss/reset": "^0.50.4",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vueuse/core": "^9.13.0",
    "bumpp": "^9.0.0",
    "chalk": "^4.1.2",
    "consola": "^2.15.3",
    "escape-html": "^1.0.3",
    "eslint": "^8.35.0",
    "fast-glob": "^3.2.12",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "markdown-it": "^13.0.1",
    "markdown-it-container": "^3.0.0",
    "md5": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "prism-theme-vars": "^0.2.4",
    "prismjs": "^1.29.0",
    "simple-git": "^3.17.0",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "unocss": "^0.50.4",
    "unocss-preset-hbs": "^0.0.5",
    "unplugin-vue-components": "^0.24.1",
    "unstyled-design": "workspace:*",
    "vite": "^4.1.4",
    "vite-plugin-inspect": "^0.7.15",
    "vitepress": "^1.0.0-alpha.50",
    "vitest": "^0.29.2",
    "vue": "^3.2.47",
    "vue-tsc": "^1.2.1"
  },
  "lint-staged": {
    "*.{vue,js,jsx,ts,tsx,json,md}": "eslint --fix"
  }
}
